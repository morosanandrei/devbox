# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/jammy64"
  
  # VM hostname
  config.vm.hostname = "devbox"

  # Network settings
  config.vm.network "private_network", ip: "192.168.56.10"
  
  # Forward common dev ports
  config.vm.network "forwarded_port", guest: 3000, host: 3000  # React/Node
  config.vm.network "forwarded_port", guest: 5173, host: 5173  # Vite
  config.vm.network "forwarded_port", guest: 8080, host: 8080  # General dev
  config.vm.network "forwarded_port", guest: 5432, host: 5432  # PostgreSQL
  config.vm.network "forwarded_port", guest: 6379, host: 6379  # Redis

  # VirtualBox settings
  config.vm.provider :virtualbox do |vb|
    vb.name = "devbox-ubuntu"
    vb.memory = 4096  # 4GB RAM
    vb.cpus = 2
    
    # Better performance
    vb.customize ["modifyvm", :id, "--natdnshostresolver1", "on"]
    vb.customize ["modifyvm", :id, "--ioapic", "on"]
  end

  # Sync folder (your projects)
  # config.vm.synced_folder ".", "/vagrant", disabled: false

  config.vm.provision "shell", path: "bootstrap.sh"
  config.ssh.forward_agent = true
end